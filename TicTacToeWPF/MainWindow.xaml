<Window
    x:Class="TicTacToeWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="clr-namespace:TicTacToeWPF.classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:da="clr-namespace:TicTacToeWPF"
    xmlns:local="clr-namespace:TicTacToeWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vw="clr-namespace:TicTacToeWPF.Views"
    x:Name="mainWindow"
    Title="MainWindow"
    Width="450"
    Height="530"
    mc:Ignorable="d">
    <!--  DataContext="{Binding RelativeSource={RelativeSource self}}"  -->
    <Grid>
        <TabControl>
            <TabItem Header="Home">
                <vw:HomeMainWindow />
            </TabItem>

            <TabItem Header="Players">
                <StackPanel Background="Blue" />
            </TabItem>

            <TabItem Header="Podium">
                <StackPanel Background="Green">
                    <ComboBox />
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>

</Window>
